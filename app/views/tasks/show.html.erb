<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://sun-asterisk.com/images/ogp.png" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://sun-asterisk.com/images/ogp.png" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://sun-asterisk.com/images/ogp.png" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<h2 class="text-center mt-2 search-result-title-color"><%= @company.name %></h2>
<hr>
<div>
  <div class="card text-center">
    <div class="card-header">
      <h4><%= @task.field %></h4>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @task.name %></h5>
      <p class="card-text m-3"><%= @task.content %></p>
      <hr>
      <table class="table table-borderless mt-5">
        <thead>
        <tr>
          <th scope="col">エリア</th>
          <th scope="col">賃金</th>
          <th scope="col">申込み期日</th>
          <th scope="col">格納予想日</th>
          <th scope="col">実装見込み</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <th scope="row"><%= @task.area %></th>
          <td><%= @task.salary %> <%= @task.money_unit %></td>
          <td><%= @task.registration_deadline.year %>年<%= @task.registration_deadline.strftime('%m') %>
            月<%= @task.registration_deadline.strftime('%e') %>日
          </td>
          <td><%= @task.task_deadline.year %>年<%= @task.task_deadline.strftime('%m') %>
            月<%= @task.task_deadline.strftime('%e') %>日
          </td>
          <td><%= @task.time_to_do %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<hr>
<% if user_signed_in? && current_user.role == 0 %>
  <% if @matching_task %>
    <div class="text-center">
      <%= link_to "申し込み済み（詳細をご覧）", users_student_path, class: "btn btn-primary w-50" %>
    </div>
  <% else %>
    <div class="text-center">
      <%= link_to "申し込み", matching_tasks_path(task_id: @task.id), method: "post", class: "btn btn-primary w-50" %>
    </div>
  <% end %>
<% end %>
